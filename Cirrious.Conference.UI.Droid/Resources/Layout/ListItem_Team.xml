<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/com.cirrious.conference.dddsw"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    local:MvxBind="{'Click':{'Path':'Command'}}"
    >
  <ImageView
      android:id="@+id/TeamImageView"
      android:layout_width="140dp"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:icon="@drawable/icon"
      local:MvxBind="{'AssetImagePath':{'Path':'Item.Image','Converter':'TeamImage'}}"
    />
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
    >
    <TextView
      android:id="@+id/TeamImageView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:textSize="24dp"
      android:textColor="@color/white"      
      local:MvxBind="{'Text':{'Path':'Item.Fullname'}}"
    />
  <TextView
      android:id="@+id/TeamImageView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:textSize="14dp"
      android:textColor="@color/white"      
      local:MvxBind="{'Text':{'Path':'Item.Description'}}"
    />
  </LinearLayout>
</LinearLayout>

