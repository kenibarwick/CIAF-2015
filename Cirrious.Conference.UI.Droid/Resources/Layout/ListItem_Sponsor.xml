<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/com.cirrious.conference.dddsw"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    local:MvxBind="{'Click':{'Path':'Command'}}"
    >
  <ImageView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:local="http://schemas.android.com/apk/res/com.cirrious.conference.dddsw"
      android:id="@+id/SponsorImageView"
      android:layout_width="150dp"
      android:layout_height="110dp"
      android:padding="5dp"
      android:gravity="center_vertical"
      android:icon="@drawable/icon"
      local:MvxBind="{'AssetImagePath':{'Path':'Item.Image','Converter':'SponsorImage'}}"
    />
  <TextView
      android:id="@+id/SponsorImageView"
      android:layout_width="fill_parent"
      android:layout_height="110dp"
      android:padding="5dp"
      android:gravity="center_vertical"
      android:textSize="18dp"
      android:textColor="@color/white"            
      local:MvxBind="{'Text':{'Path':'Item.Name'}}"
    />
</LinearLayout>

